<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECE5F2"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:text="Edit Daily Schedule"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/closeDailyFeedingScheduleView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close dialog"
            android:padding="8dp"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="#3A4F50" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addDailyFeedingTimeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#3A4F50"
        android:fontFamily="@font/poppins"
        android:text="Add Feeding Time"
        android:textColor="#FFFFFF"
        app:cornerRadius="6dp"
        app:icon="@android:drawable/ic_menu_add"
        app:iconTint="#FFFFFF"
        app:iconGravity="textStart" />

    <ScrollView
        android:id="@+id/dailyScheduleContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/dailySchedulesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveDailyScheduleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#3A4F50"
        android:fontFamily="@font/poppins"
        android:text="Save Schedule"
        android:textColor="#FFFFFF"
        app:cornerRadius="6dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/deleteScheduleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#F44336"
        android:fontFamily="@font/poppins"
        android:text="Delete Schedule"
        android:textColor="#FFFFFF"
        app:cornerRadius="6dp" />

</LinearLayout> 